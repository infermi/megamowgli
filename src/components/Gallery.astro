---
const { path } = Astro.props;

const GALLERYIMAGES = Array.from({ length: 10 }, (_, i) => i + 1);
---

<div class="-z-10 grid grid-cols-2 gap-4 md:grid-cols-4" id="gallery">
  {
    GALLERYIMAGES.map((image) => (
      <div>
        <img
          data-aos="fade"
          class="aspect-square h-auto max-w-full cursor-pointer rounded-lg object-cover hover:brightness-95"
          src={"/megamowgli/gallery/" + path + image + ".jpg"}
          alt=""
        />
      </div>
    ))
  }
</div>

