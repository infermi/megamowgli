---
import Gallery from "../components/Gallery.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Devider from "../components/Devider.astro";
import Contact from "../components/Contact.astro";
---

<!DOCTYPE html>
<html lang="he" class="scroll-smooth text-center transition-all" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/megamowgli/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300;400;500;600;700;800;900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Varela+Round&display=swap"
      rel="stylesheet"
    />
    <!-- Flowbite -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.css"
      rel="stylesheet"
    />

    <title>תיאטרון</title>
  </head>
  <body class="font-sans">
    <div
      class="fixed right-4 top-1 z-20 flex flex-col gap-y-1 text-[2.5em] lg:bottom-10 lg:left-10 lg:text-[3em]"
    >
      <a
        href="/"
        class="z-20 inline-block w-fit rounded-lg bg-gray-100 px-4 py-2 font-sans text-black underline transition-all duration-150 hover:scale-105 hover:shadow-xl"
        >חזור</a
      >
    </div>

    <h1 class="mb-20 mt-10 font-heebo text-6xl font-bold xl:text-7xl">
      גלרית מתחמי למידה
    </h1>
    <Gallery path="learning/" />
    <Devider />

    <Contact />

    <Footer />
    <!-- Flowbite -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.4/flowbite.min.js"
    ></script>

    <!-- AOS -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({ delay: 200, duration: 500, once: true });
    </script>
  </body>
</html>
